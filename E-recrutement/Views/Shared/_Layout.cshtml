<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <title>E-recrutement</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
        <meta content="" name="keywords">
        <meta content="" name="description">

        <!-- Favicon -->
        <link href="img/favicon.ico" rel="icon">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-QsHKxYAZuphoONUeRhzaBmRgLiROdyJfelXLqmhwgyfGtN/NyRxPdQlCYJZsvgKzPTlC8eyy//L2IU/T80CZiyMw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        <!-- Google Web Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

        <!-- Icon Font Stylesheet -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

        <!-- Libraries Stylesheet -->
        <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

        <!-- Customized Bootstrap Stylesheet -->
        <link href="css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center text-center py-0 px-4 px-lg-5">
                    <h1 class="m-0 text-primary">E-recrutement</h1>
                </a>
                <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto p-4 p-lg-0">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Home</a>
                        @if (User.IsInRole("Candidat"))
                        {
                            <a asp-area="" asp-controller="Offer" asp-action="Index" class="nav-item nav-link active">Offers</a>
                            <a asp-area="" asp-controller="Offer" asp-action="MyApplications" class="nav-item nav-link active">Applications</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Pages</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a asp-area="" asp-controller="Offer" asp-action="Categorie" class="dropdown-item">Categories</a>
                                    <a asp-area="" asp-controller="Home" asp-action="Testemonial" class="dropdown-item">Testmonial</a>
                                </div>
                            </div>
                            <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-item nav-link active">Contact</a>
                            <a asp-area="" asp-controller="Home" asp-action="About" class="nav-item nav-link active">About</a>
                        } else if (User.IsInRole("Recruteur"))
                        {
                            <a asp-area="" asp-controller="Offer" asp-action="OthersOffers" class="nav-item nav-link active">Others' Offers</a>
                            <a asp-area="" asp-controller="Offer" asp-action="Create" class="nav-item nav-link">Create offer</a>
                            <a asp-area="" asp-controller="Offer" asp-action="ReceivedApplications" class="nav-item nav-link">Received Applications</a>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="Offer" asp-action="Index" class="nav-item nav-link active">Offers</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Pages</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a asp-area="" asp-controller="Offer" asp-action="Categorie" class="dropdown-item">Categories</a>
                                    <a asp-area="" asp-controller="Home" asp-action="Testemonial" class="dropdown-item">Testmonial</a>
                                </div>
                            </div>
                            <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-item nav-link active">Contact</a>
                            <a asp-area="" asp-controller="Home" asp-action="About" class="nav-item nav-link active">About</a>
                        }
                    <partial name="_LoginPartial" />
                </div>
                    
                @if (User.IsInRole("Recruteur"))
                {
                    <a asp-area="" asp-controller="Offer" asp-action="Create" class="btn btn-primary rounded-0 py-4 px-lg-5 d-none d-lg-block">Post A Job<i class="fa fa-arrow-right ms-3"></i></a>
                } else
                {
                    <a asp-area="" asp-controller="Offer" asp-action="Index" class="btn btn-primary rounded-0 py-4 px-lg-5 d-none d-lg-block">Apply Now<i class="fa fa-arrow-right ms-3"></i></a>
                }
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
                @RenderSection("Scripts", required: false)
            </main>
        </div>

        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Company</h5>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="About">About Us</a>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="Privacy">Terms & Condition</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Quick Links</h5>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="About">About Us</a>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        <a class="btn btn-link text-white-50" asp-controller="Home" asp-action="Privacy">Terms & Condition</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Contact</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Km 7 route El jadida, Casablanca, MA</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+212 500000000</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@e-recrutement.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href="#"><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Newsletter</h5>
                        <p>Sign up to receive latest offers.</p>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                            <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" asp-controller="Home" asp-action="Index">e-recrutement.com</a>, All Right Reserved.

                            Designed By <a class="border-bottom" href="https://linkedin.com/in/aysami">Ayoub SAMI</a>
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <div class="footer-menu">
                                <a asp-controller="Home" asp-action="Index">Home</a>
                                <a href="#">Cookies</a>
                                <a asp-controller="Home" asp-action="Contact">Help</a>
                            <a asp-controller="Home" asp-action="Contact">FQAs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>