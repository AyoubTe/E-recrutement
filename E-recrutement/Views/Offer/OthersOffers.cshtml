@model List<Offer>

@{
    ViewData["Title"] = "Other's Offers";
}

<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Offers published by other recrutors</h1>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                        @foreach (var obj in Model)
                        {
                            <div class="job-item p-4 mb-4">
                                <div class="row g-4">
                                    <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid border rounded" src="~/img/@obj.UrlCompanyLogo" alt="" style="width: 80px; height: 80px;">
                                        <div class="text-start ps-4">
                                            <h5 class="mb-3">@obj.Poste</h5>
                                            <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@obj.Location</span>
                                            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@obj.Type</span>
                                            <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>@obj.Remuneration</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                        <div class="d-flex mb-3">
                                            <a class="btn btn-primary" asp-controller="Offer" asp-route-id="@obj.Id" asp-action="Details">See Offer</a>
                                        </div>
                                        <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: @obj.DateLine</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div> 
    </div>
</div>