@model List<Offer>

@{
    ViewData["Title"] = "Offers";
}

@if (!User.IsInRole("Recruteur"))
{
    <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
        <div class="container">
            <form class="row g-2" method="post">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <input type="text" class="form-control border-0" placeholder="Sector" id="sector" name="sector" />
                        </div>
                        <div class="col-md-4">
                            <input type="number" class="form-control border-0" placeholder="Min Salary" id="minSalary" name="minSalary"/>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select border-0" id="profile" name="profile">
                                <option selected>Profile</option>
                                <option value="1">Deug</option>
                                <option value="2">Ingenieur</option>
                                <option value="3">License</option>
                                <option value="4">Master</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button asp-controller="Offer" asp-action="Search" type="submit" class="btn btn-dark border-0 w-100">Search</button>
                </div>
            </form>
        </div>
    </div>
}

<div class="container-xxl py-5">
    <div class="container">
        @if (!User.IsInRole("Recruteur"))
        {
            <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Job Listing</h1>
            <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                    <li class="nav-item">
                        <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill" href="#tab-1">
                            <h6 class="mt-n1 mb-0">Featured</h6>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center text-start mx-3 pb-3" data-bs-toggle="pill" href="#tab-2">
                            <h6 class="mt-n1 mb-0">@TypeContrat.CDD</h6>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill" href="#tab-3">
                            <h6 class="mt-n1 mb-0">@TypeContrat.CDI</h6>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill" href="#tab-4">
                            <h6 class="mt-n1 mb-0">@TypeContrat.INTERN</h6>
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        @foreach (var obj in Model)
                        {
                            <div class="job-item p-4 mb-4">
                                <div class="row g-4">
                                    <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid border rounded" src="~/img/@obj.UrlCompanyLogo" alt="" style="width: 80px; height: 80px;">
                                        <div class="text-start ps-4">
                                            <h5 class="mb-3">@obj.Poste</h5>
                                            <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@obj.Location</span>
                                            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@obj.Type</span>
                                            <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>@obj.Remuneration</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                        <div class="d-flex mb-3">
                                            <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                            <a class="btn btn-primary" asp-controller="Offer" asp-route-id="@obj.Id" asp-action="Details">See Offer</a>
                                        </div>
                                        <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: @obj.DateLine</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Offers Created</h1>
            <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        @foreach (var obj in Model)
                        {
                            <div class="job-item p-4 mb-4">
                                <div class="row g-4">
                                    <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid border rounded" src="~/img/@obj.UrlCompanyLogo" alt="" style="width: 80px; height: 80px;">
                                        <div class="text-start ps-4">
                                            <h5 class="mb-3">@obj.Poste</h5>
                                            <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@obj.Location</span>
                                            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@obj.Type</span>
                                            <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>@obj.Remuneration</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                        <div class="d-flex mb-3">
                                            <a class="btn btn-primary me-2" asp-controller="Offer" asp-route-id="@obj.Id" asp-action="Edit">Edit Offer</a>
                                            <a class="btn btn-danger" asp-controller="Offer" asp-route-id="@obj.Id" asp-action="Delete">Delete Offer</a>
                                        </div>
                                        <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: @obj.DateLine</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>