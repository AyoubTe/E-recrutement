@using E_recrutement.Models.ViewModels

@model List<CandidatureVM>

@{
    ViewData["Title"] = "My Applications";
}

<div class="container-xxl py-5">
    <div class="container">
            <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">History Of My Applications</h1>
            <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        @foreach (var obj in Model)
                        {
                            <div class="job-item p-4 mb-4">
                                <div class="row g-4">
                                    <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid border rounded" src="~/img/@obj.ConcernedOffer.UrlCompanyLogo" alt="company logo" style="width: 80px; height: 80px;">
                                        <div class="text-start ps-4">
                                            <h5 class="mb-3">@obj.ConcernedOffer.Poste</h5>
                                            <span class="text-truncate me-3">@obj.ConcernedOffer.Location</span>
                                            <span class="text-truncate me-3">@obj.ConcernedOffer.Type</span>
                                        <span class="text-truncate me-0">@obj.ConcernedOffer.Remuneration</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                        <div class="d-flex mb-3">
                                            <a class="btn btn-primary me-2" asp-controller="Offer" asp-route-id="@obj.Apply.Id" asp-action="ConsulterCandidature">View Application</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
    </div>
</div>